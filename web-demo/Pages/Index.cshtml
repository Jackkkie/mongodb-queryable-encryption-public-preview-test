@page
@model IndexModel
@{
    ViewData["Title"] = "MongoDB Queryable Encryption Demo";
}

<!-- Loading Overlay -->
<div id="loading-overlay" style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.8); color: white; display: none; flex-direction: column; justify-content: center; align-items: center; z-index: 9999;">
    <div class="spinner-border text-light mb-3" role="status" style="width: 3rem; height: 3rem;">
        <span class="visually-hidden">Loading...</span>
    </div>
    <h3>Initializing MongoDB Connection...</h3>
    <p>Please wait while we establish secure connection and prepare encryption keys.</p>
</div>

<div class="container-fluid">
    <h1 class="text-center py-4 mb-4">MongoDB Queryable Encryption Demo</h1>

    <div class="row mb-3">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <button type="button" class="btn btn-success me-2" id="generateDataBtn" data-bs-toggle="modal" data-bs-target="#generateModal">
                    Generate Patient
                </button>
                <button type="button" class="btn btn-danger" id="deleteAllBtn">
                    Delete All Data
                </button>
            </div>
            <span>
                Total Records: <strong id="recordCount">0</strong>
            </span>
        </div>
    </div>

    <!-- Forms Row - Side by Side -->
    <div class="row">
        <!-- Add Patient Form - Left Side -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header py-3">
                    <h3>Add New Patient</h3>
                </div>
                <div class="card-body">
                    <form id="addPatientForm">
                        <div class="mb-3">
                            <label for="firstName" class="form-label">First Name</label>
                            <input type="text" class="form-control" id="firstName" required>
                        </div>
                        <div class="mb-3">
                            <label for="lastName" class="form-label">Last Name</label>
                            <input type="text" class="form-control" id="lastName" required>
                        </div>
                        <div class="mb-3">
                            <label for="dob" class="form-label">Date of Birth (YYYY-MM-DD)</label>
                            <input type="date" class="form-control" id="dob" required
                                   style="appearance: none; -webkit-appearance: none;"
                                   data-date="" data-date-format="YYYY-MM-DD">
                        </div>
                        <div class="mb-3">
                            <label for="zipCode" class="form-label">Zip Code</label>
                            <input type="text" class="form-control" id="zipCode" pattern="[0-9]{5}" required>
                        </div>
                        <div class="mb-3">
                            <label for="nationalId" class="form-label">National ID</label>
                            <input type="text" class="form-control" id="nationalId" pattern="[0-9]{6}-[0-9]{7}"
                                   placeholder="901201-1234567" required>
                        </div>
                        <div class="mb-3">
                            <label for="phoneNumber" class="form-label">Mobile Number</label>
                            <input type="text" class="form-control" id="phoneNumber" pattern="010-[0-9]{4}-[0-9]{4}"
                                   placeholder="010-1234-5678" required>
                        </div>
                        <div class="mb-3">
                            <label for="notes" class="form-label">Notes (max 60 chars)</label>
                            <textarea class="form-control" id="notes" rows="2" maxlength="60"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Add Patient</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Search Form - Right Side -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header py-3">
                    <h3>Search Patients</h3>
                </div>
                <div class="card-body">
                    <form id="searchForm">
                        <div class="mb-3">
                            <label for="searchFirstName" class="form-label">First Name (prefix, min 3 chars)</label>
                            <input type="text" class="form-control" id="searchFirstName" placeholder="John or Joh">
                        </div>
                        <div class="mb-3">
                            <label for="searchLastName" class="form-label">Last Name (prefix, min 3 chars)</label>
                            <input type="text" class="form-control" id="searchLastName" placeholder="Smith or Smi">
                        </div>
                        <div class="mb-3">
                            <label for="searchNationalId" class="form-label">National ID (prefix, min 6 chars)</label>
                            <input type="text" class="form-control" id="searchNationalId" placeholder="901201 or 123456">
                        </div>
                        <div class="mb-3">
                            <label for="searchYearOfBirth" class="form-label">Year of Birth</label>
                            <input type="number" class="form-control" id="searchYearOfBirth"
                                   min="1900" max="2025" placeholder="1990">
                        </div>
                        <div class="mb-3">
                            <label for="searchZipCode" class="form-label">Zip Code (exact match, 5 digits)</label>
                            <input type="text" class="form-control" id="searchZipCode" placeholder="12345">
                        </div>
                        <div class="mb-3">
                            <label for="searchPhoneNumber" class="form-label">Mobile Number (suffix, min 4 chars)</label>
                            <input type="text" class="form-control" id="searchPhoneNumber" placeholder="5678 or 1234">
                        </div>
                        <div class="mb-3">
                            <label for="searchNotes" class="form-label">Notes (substring, min 3 chars)</label>
                            <input type="text" class="form-control" id="searchNotes" placeholder="diabetes or allergy">
                        </div>
                        <button type="submit" class="btn btn-primary">Search</button>
                        <button type="button" class="btn btn-secondary" id="clearSearchBtn">Clear</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Search Results - Full Width Below Forms (Hidden by default) -->
    <div class="row mt-4 d-none" id="searchResultsSection">
        <div class="col-12">
            <div class="card">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h3>Search Results</h3>
                    <button type="button" class="btn btn-sm btn-primary d-none" id="showExplainBtn" data-bs-toggle="modal" data-bs-target="#explainModal">
                        Show Execution Stats
                    </button>
                </div>
                <div class="card-body">
                    <div id="loadingSpinner" class="text-center d-none">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                    <div id="searchResults" style="max-height: 500px; overflow-y: auto;">
                        <table class="table table-striped table-hover">
                            <thead class="sticky-top bg-white">
                                <tr>
                                    <th>First Name</th>
                                    <th>Last Name</th>
                                    <th>DOB</th>
                                    <th>Zip Code</th>
                                    <th>National ID</th>
                                    <th>Mobile</th>
                                    <th>Notes</th>
                                </tr>
                            </thead>
                            <tbody id="resultsTableBody">
                            </tbody>
                        </table>
                        <div id="noResults" class="text-center text-muted d-none">
                            No results found
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Generate Patients Modal -->
<div class="modal fade" id="generateModal" tabindex="-1" aria-labelledby="generateModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="generateModalLabel">Generate Patient Records</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="modalPatientCount" class="form-label">Number of patients to generate:</label>
                    <input type="number" class="form-control" id="modalPatientCount"
                           value="20000" min="1000" max="5000000" step="1000"
                           placeholder="Enter count (1,000 - 5,000,000)">
                    <div class="form-text">Enter a number between 1,000 and 5,000,000 (will be rounded to nearest 1,000)</div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="confirmGenerateBtn">Generate</button>
            </div>
        </div>
    </div>
</div>

<!-- Execution Stats Modal -->
<div class="modal fade" id="explainModal" tabindex="-1" aria-labelledby="explainModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl" style="max-width: 90%; height: 90vh; margin: 5vh auto;">
        <div class="modal-content" style="height: 100%;">
            <div class="modal-header">
                <h5 class="modal-title" id="explainModalLabel">Query Execution Statistics</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" style="overflow-y: auto;">
                <pre id="modalRawExplain" class="bg-dark text-light p-3 rounded" style="font-size: 0.9em; font-family: 'Consolas', 'Monaco', 'Courier New', monospace; white-space: pre-wrap; word-wrap: break-word;">{}</pre>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/site.js" asp-append-version="true"></script>
}